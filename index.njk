        <div class="flex gap-2">
          <div class="text-5xl w-14 min-w-14 font-extrabold">
            {{ loop.index }}
          </div>
          <div class="flex flex-col">
            <div>
            {{ post.data.title }}
            </div>
            <div class="text-xs text-slate-500">
            {{ post.data.date | formatDate("LLLL dd, yyyy") }}
            </div>
          </div>
        </div>
      </a>
    </li>
    <hr>
    {%- endfor %}
  </ul>
